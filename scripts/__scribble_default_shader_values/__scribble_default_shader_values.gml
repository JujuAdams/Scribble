/// @param json

var _json = argument0;

_json[? "shader master" ] = true;

//Text colour mixing
_json[? "mix colour" ] = c_white;
_json[? "mix weight" ] = 0;

//Text alpha
_json[? "alpha" ] = 1;

//Dynamic effects
_json[? "wave size"      ] = 5;
_json[? "shake size"     ] = 3;
_json[? "rainbow weight" ] = 1;

//Character fade
_json[? "char fade t"          ] = 1;
_json[? "char fade smoothness" ] = 0;

//Line fade
_json[? "line fade t"          ] = 1;
_json[? "line fade smoothness" ] = 0;

//Hyperlinks
_json[? "hyperlink colour"        ] = c_blue;
_json[? "hyperlink fade in rate"  ] = 0.2;
_json[? "hyperlink fade out rate" ] = 0.2;